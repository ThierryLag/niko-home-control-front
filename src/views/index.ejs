<% include header %>
<div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
    <% results.forEach(function(location) { %>
        <div class="panel panel-default">
            <div class="panel-heading" role="tab" id="headingThree">
              <h4 class="panel-title">
                <a class="collapsed" role="button" data-toggle="collapse" data-parent="#accordion" href="#collapse<%- location.id %>" aria-expanded="false" aria-controls="collapse<%- location.id %>">
                    <%- location.name %>
                </a>
              </h4>
            </div>
            <div id="collapse<%- location.id %>" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingThree">
              <div class="panel-body">
                <% location.actions.forEach(function(action) { %>
                    <button type="button" class="btn <% if (action.value1 > 0) { %>btn-warning<% } else { %>btn-default<% } %> action-run" data-action="<%- action.id %>" data-value1="<% if (action.value1 > 0) { %>0<% } else { %>100<% } %>"><%- action.name %></button>
                <% }); %>
              </div>
            </div>
        </div>
    <% }); %>
</div>
<% include footer %>
